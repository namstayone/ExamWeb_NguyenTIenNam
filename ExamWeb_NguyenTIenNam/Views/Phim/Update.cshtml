@model Phim
<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />
    <h2>Sửa Phim</h2>
    <hr />
    <div class="form-group">
        <label>Từa Đề</label>
        <input asp-for="TuaDe" class="form-control" />
        <span asp-validation-for="TuaDe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Thể Loại</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="TrongNuoc" name="inlineRadioOptions" id="inlineRadio1" value="option1">
            <label class="form-check-label" for="inlineRadio1">Việt Nam</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" asp-for="TrongNuoc" id="inlineRadio2" value="option2">
            <label class="form-check-label" for="inlineRadio2">Nước Ngoài</label>
        </div>
    </div>
    <div class="form-group">
        <label>Gia Vé</label>
        <input asp-for="GiaVe" class="form-control" />
        <span asp-validation-for="GiaVe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Thời Lượng</label>
        <input asp-for="ThoiLuong" class="form-control" />
        <span asp-validation-for="ThoiLuong" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary"> Update </button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>